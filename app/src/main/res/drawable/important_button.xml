<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="18dp"/>
            <gradient android:type="linear"
                android:angle="45"
                android:startColor="@color/button_important_start"
                android:endColor="@color/button_important_end"/>
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <corners android:radius="20dp"/>
            <gradient android:type="linear"
                android:angle="270"
                android:startColor="@color/button_standard_start"
                android:endColor="@color/button_standard_end"/>
        </shape>
    </item>

</layer-list>