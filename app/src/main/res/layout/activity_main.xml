<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/frequency_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Częstotliwość dźwięku"/>

    <EditText
        android:id="@+id/frequency_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/frequency_header"
        android:layout_marginTop="20dp"
        android:inputType="numberSigned"
        android:text="500"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/frequency_apply_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frequency_txt"
        android:layout_toEndOf="@id/frequency_txt"
        android:layout_marginLeft="40dp"
        android:text="ZASTOSUJ"/>

    <SeekBar
        android:id="@+id/frequency_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frequency_txt"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/duration_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/frequency_bar"
        android:layout_marginTop="20dp"
        android:text="Dlugosc dzwieku"/>

    <EditText
        android:id="@+id/duration_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/duration_hint"
        android:layout_marginTop="20dp"
        android:inputType="numberSigned"
        android:text="500"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/duration_apply_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/duration_txt"
        android:layout_toEndOf="@id/duration_txt"
        android:layout_marginLeft="40dp"
        android:text="ZASTOSUJ"/>

    <SeekBar
        android:id="@+id/duration_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/duration_txt"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soundwave"
        android:layout_centerInParent="true" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/on_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:text="ON"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/off_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/on_btn"
        android:layout_centerHorizontal="true"
        android:text="OFF"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:text="ZAPISZ"/>


</RelativeLayout>