<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_tone_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_track_tone"
    tools:layout_width="@dimen/tone_mixer_tone_width"
    tools:layout_height="@dimen/tone_mixer_track_tone_height">

    <TextView
        android:id="@+id/tone_mixer_track_tone_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:maxLines="3"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tone to mix" />

    <ImageView
        android:id="@+id/tone_mixer_tone_delete_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:padding="8dp"
        android:src="@drawable/ic_delete"
        android:visibility="invisible"
        android:background="@color/black50transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/delete_bin"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>