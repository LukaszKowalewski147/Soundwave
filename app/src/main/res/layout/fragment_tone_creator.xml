<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:padding="8dp"
    tools:context=".ToneCreatorFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_creator_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/customize_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/background_shadow"
        app:layout_constraintBottom_toTopOf="@id/guideline_creator_bottom"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/creation_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/create_sound_header"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/creation_header_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:background="@color/header_separator"
            app:layout_constraintTop_toBottomOf="@id/creation_header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#00FFFFFF"
            android:fadingEdgeLength="16dp"
            android:requiresFadingEdge="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/creation_header_separator">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sample_rate_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        android:id="@+id/sample_rate_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:src="@drawable/ic_sample_rate2"
                        app:layout_constraintBottom_toBottomOf="@+id/sample_rate_header"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/sample_rate_header"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/sample_rate_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/sample_rate_header"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/sample_rate_icon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Spinner
                        android:id="@+id/sample_rates_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/envelope_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/sample_rate_layout">

                    <ImageView
                        android:id="@+id/envelope_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@null"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:src="@drawable/ic_envelope"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/envelope_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/envelope_header"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/envelope_icon"
                        app:layout_constraintStart_toEndOf="@id/envelope_icon"
                        app:layout_constraintTop_toTopOf="@id/envelope_icon" />

                    <TextView
                        android:id="@+id/envelope_attack_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/envelope_attack_header"
                        android:textAllCaps="true"
                        android:textColor="@color/app_yellow"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@id/envelope_attack_unit"
                        app:layout_constraintStart_toStartOf="@id/envelope_attack"
                        app:layout_constraintTop_toBottomOf="@id/envelope_attack" />

                    <EditText
                        android:id="@+id/envelope_attack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/envelope_decay"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/envelope_icon"
                        tools:text="50" />

                    <TextView
                        android:id="@+id/envelope_attack_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:text="@string/millisecond_unit"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/envelope_attack"
                        app:layout_constraintStart_toEndOf="@id/envelope_attack"
                        app:layout_constraintTop_toTopOf="@id/envelope_attack" />

                    <TextView
                        android:id="@+id/envelope_decay_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/envelope_decay_header"
                        android:textAllCaps="true"
                        android:textColor="@color/app_yellow"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@id/envelope_decay_unit"
                        app:layout_constraintStart_toStartOf="@id/envelope_decay"
                        app:layout_constraintTop_toTopOf="@id/envelope_attack_header" />

                    <EditText
                        android:id="@+id/envelope_decay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/envelope_sustain"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@id/envelope_attack"
                        app:layout_constraintTop_toTopOf="@id/envelope_attack"
                        tools:text="250" />

                    <TextView
                        android:id="@+id/envelope_decay_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:text="@string/millisecond_unit"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/envelope_decay"
                        app:layout_constraintTop_toTopOf="@id/envelope_attack_unit" />

                    <TextView
                        android:id="@+id/envelope_sustain_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/envelope_sustain_header"
                        android:textAllCaps="true"
                        android:textColor="@color/app_yellow"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@id/envelope_sustain_unit"
                        app:layout_constraintStart_toStartOf="@id/envelope_sustain"
                        app:layout_constraintTop_toTopOf="@id/envelope_attack_header" />

                    <EditText
                        android:id="@+id/envelope_sustain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/envelope_release"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@id/envelope_decay"
                        app:layout_constraintTop_toTopOf="@id/envelope_attack"
                        tools:text="40" />

                    <TextView
                        android:id="@+id/envelope_sustain_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:text="@string/percent_unit"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/envelope_sustain"
                        app:layout_constraintTop_toTopOf="@id/envelope_attack_unit" />

                    <TextView
                        android:id="@+id/envelope_release_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/envelope_release_header"
                        android:textAllCaps="true"
                        android:textColor="@color/app_yellow"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@id/envelope_release_unit"
                        app:layout_constraintStart_toStartOf="@id/envelope_release"
                        app:layout_constraintTop_toTopOf="@id/envelope_attack_header" />

                    <EditText
                        android:id="@+id/envelope_release"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@id/envelope_sustain"
                        app:layout_constraintTop_toTopOf="@id/envelope_attack"
                        tools:text="750" />

                    <TextView
                        android:id="@+id/envelope_release_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:text="@string/millisecond_unit"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/envelope_release"
                        app:layout_constraintTop_toTopOf="@id/envelope_attack_unit" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/tone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/envelope_layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <include
                            android:id="@+id/tone"
                            layout="@layout/tone" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_creator_bottom">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_details_control_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_shadow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_details_control_separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tone_details_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/tone_details_header"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/tone_details_header_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:background="@color/header_separator"
                app:layout_constraintTop_toBottomOf="@id/tone_details_header" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tone_details_header_underline">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_parameters_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.52" />

                <TextView
                    android:id="@+id/tone_details_sample_rate_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/sample_rate_header"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toTopOf="@id/tone_details_fundamental_frequency_txt"
                    app:layout_constraintEnd_toStartOf="@id/guideline_parameters_separator"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tone_details_sample_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/guideline_parameters_separator"
                    app:layout_constraintTop_toTopOf="@id/tone_details_sample_rate_txt"
                    tools:text="44.1kHz" />

                <TextView
                    android:id="@+id/tone_details_fundamental_frequency_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frequency_header"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toTopOf="@id/tone_details_envelope_preset_txt"
                    app:layout_constraintEnd_toEndOf="@id/tone_details_sample_rate_txt"
                    app:layout_constraintTop_toBottomOf="@id/tone_details_sample_rate_txt" />

                <TextView
                    android:id="@+id/tone_details_fundamental_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tone_details_sample_rate"
                    app:layout_constraintTop_toTopOf="@id/tone_details_fundamental_frequency_txt"
                    tools:text="500Hz" />

                <TextView
                    android:id="@+id/tone_details_envelope_preset_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/envelope_header"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toTopOf="@id/tone_details_timbre_preset_txt"
                    app:layout_constraintEnd_toEndOf="@id/tone_details_sample_rate_txt"
                    app:layout_constraintTop_toBottomOf="@id/tone_details_fundamental_frequency_txt" />

                <TextView
                    android:id="@+id/tone_details_envelope_preset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tone_details_sample_rate"
                    app:layout_constraintTop_toTopOf="@id/tone_details_envelope_preset_txt"
                    tools:text="Custom" />

                <TextView
                    android:id="@+id/tone_details_timbre_preset_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timbre_header"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tone_details_sample_rate_txt"
                    app:layout_constraintTop_toBottomOf="@id/tone_details_envelope_preset_txt" />

                <TextView
                    android:id="@+id/tone_details_timbre_preset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tone_details_sample_rate"
                    app:layout_constraintTop_toTopOf="@id/tone_details_timbre_preset_txt"
                    tools:text="Custom" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_shadow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_details_control_separator"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/control_panel_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/control_panel_header"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/control_panel_header_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:background="@color/header_separator"
                app:layout_constraintTop_toBottomOf="@id/control_panel_header" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/generate_tone_btn"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@drawable/background_btn_standard"
                android:drawableStart="@drawable/ic_generate"
                android:paddingStart="8dp"
                android:text="@string/generate_btn"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintBottom_toTopOf="@+id/save_tone_btn"
                app:layout_constraintEnd_toStartOf="@+id/play_tone_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/control_panel_header_underline"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/play_tone_btn"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@drawable/background_btn_standard"
                android:drawableStart="@drawable/ic_play_note"
                android:paddingStart="8dp"
                android:text="@string/play_btn"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/generate_tone_btn"
                app:layout_constraintTop_toTopOf="@+id/generate_tone_btn"
                tools:ignore="RtlSymmetry" />
            <!--    stop state      -->     <!--
            tools:background="@drawable/background_btn_red"
            tools:drawableStart="@drawable/ic_stop"
            tools:text="@string/stop_btn"                           -->
            <!--    inactive state  -->     <!--
            tools:background="@drawable/background_btn_inactive"    -->


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save_tone_btn"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@drawable/background_btn_standard"
                android:drawableStart="@drawable/ic_save"
                android:paddingStart="8dp"
                android:text="@string/save_btn"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/reset_tone_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/generate_tone_btn"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reset_tone_btn"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@drawable/background_btn_standard"
                android:drawableStart="@drawable/ic_reset"
                android:paddingStart="8dp"
                android:text="@string/reset_btn"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/save_tone_btn"
                app:layout_constraintTop_toTopOf="@+id/save_tone_btn"
                tools:ignore="RtlSymmetry" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>