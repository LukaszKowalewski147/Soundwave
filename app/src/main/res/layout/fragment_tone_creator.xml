<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_shadow_layout"
    tools:background="@color/dark_gray"
    tools:context=".view.ToneCreatorFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tone_creator_guideline_creator_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.74" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/tone_creator_guideline_creator_bottom"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tone_creator_tone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:freezesText="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="długa nazwa MAX 1234 panie Boczku świnio opasła"
            tools:visibility="visible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#00FFFFFF"
            android:fadingEdgeLength="16dp"
            android:requiresFadingEdge="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tone_creator_tone_name">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="256dp"
                tools:ignore="RtlSymmetry">

                <Spinner
                    android:id="@+id/tone_creator_sample_rates_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/tone_creator_sample_rate_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@null"
                    android:scaleX="0.6"
                    android:scaleY="0.7"
                    android:src="@drawable/ic_sample_rate"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_sample_rates_spinner"
                    app:layout_constraintEnd_toEndOf="@id/tone_creator_frequency_decrement_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_sample_rates_spinner" />

                <TextView
                    android:id="@+id/tone_creator_sample_rate_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/sample_rate_header"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_sample_rates_spinner"
                    app:layout_constraintEnd_toStartOf="@id/tone_creator_sample_rates_spinner"
                    app:layout_constraintStart_toEndOf="@id/tone_creator_sample_rate_icon"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_sample_rates_spinner" />

                <Spinner
                    android:id="@+id/tone_creator_envelope_preset_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tone_creator_sample_rates_spinner" />

                <ImageView
                    android:id="@+id/tone_creator_envelope_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@null"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/ic_envelope"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_envelope_preset_spinner"
                    app:layout_constraintEnd_toEndOf="@id/tone_creator_frequency_decrement_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_envelope_preset_spinner" />

                <TextView
                    android:id="@+id/tone_creator_envelope_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/envelope_header"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_envelope_preset_spinner"
                    app:layout_constraintEnd_toStartOf="@id/tone_creator_envelope_preset_spinner"
                    app:layout_constraintStart_toEndOf="@id/tone_creator_envelope_icon"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_envelope_preset_spinner" />

                <ViewStub
                    android:id="@+id/tone_creator_custom_envelope_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout="@layout/tone_creator_custom_envelope_layout"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tone_creator_envelope_preset_spinner"
                    tools:layout="@layout/tone_creator_custom_envelope_layout" />

                <TextView
                    android:id="@+id/tone_creator_duration_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="1dp"
                    android:text="@string/millisecond_unit"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_duration_input"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_duration_input" />

                <EditText
                    android:id="@+id/tone_creator_duration_input"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical|end"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:minWidth="48dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/tone_creator_duration_unit"
                    app:layout_constraintStart_toStartOf="@id/tone_creator_envelope_preset_spinner"
                    app:layout_constraintTop_toBottomOf="@id/tone_creator_custom_envelope_layout"
                    tools:text="1200" />

                <ImageView
                    android:id="@+id/tone_creator_duration_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@null"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_duration"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_duration_input"
                    app:layout_constraintEnd_toEndOf="@id/tone_creator_frequency_decrement_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_duration_input" />

                <TextView
                    android:id="@+id/tone_creator_duration_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="marquee"
                    android:labelFor="@id/tone_creator_duration_input"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/duration_header"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_duration_icon"
                    app:layout_constraintEnd_toStartOf="@id/tone_creator_duration_input"
                    app:layout_constraintStart_toEndOf="@id/tone_creator_duration_icon"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_duration_icon" />

                <NumberPicker
                    android:id="@+id/tone_creator_note_input"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tone_creator_duration_input" />

                <ImageView
                    android:id="@+id/tone_creator_frequency_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@null"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_frequency"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_note_input"
                    app:layout_constraintEnd_toEndOf="@id/tone_creator_frequency_decrement_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_note_input" />

                <TextView
                    android:id="@+id/tone_creator_frequency_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="marquee"
                    android:labelFor="@id/tone_creator_fundamental_frequency_input"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/frequency_header"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_note_input"
                    app:layout_constraintEnd_toStartOf="@id/tone_creator_fundamental_frequency_input"
                    app:layout_constraintStart_toEndOf="@id/tone_creator_frequency_icon"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_note_input" />

                <EditText
                    android:id="@+id/tone_creator_fundamental_frequency_input"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:gravity="end|center_vertical"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:minWidth="48dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_note_input"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_note_input"
                    tools:text="500" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/hertz_unit"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_fundamental_frequency_input"
                    app:layout_constraintStart_toEndOf="@id/tone_creator_fundamental_frequency_input"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_fundamental_frequency_input" />

                <SeekBar
                    android:id="@+id/tone_creator_fundamental_frequency_bar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:progress="50"
                    android:progressTint="@color/app_yellow_gradient_start"
                    android:thumb="@drawable/custom_seekbar_thumb"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_frequency_decrement_btn"
                    app:layout_constraintEnd_toStartOf="@id/tone_creator_frequency_increment_btn"
                    app:layout_constraintStart_toEndOf="@id/tone_creator_frequency_decrement_btn"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_frequency_decrement_btn" />

                <ImageButton
                    android:id="@+id/tone_creator_frequency_decrement_btn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?android:selectableItemBackground"
                    android:contentDescription="@string/desc_frequency_decrement_btn"
                    android:src="@drawable/btn_decrement"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tone_creator_fundamental_frequency_input" />

                <ImageButton
                    android:id="@+id/tone_creator_frequency_increment_btn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:background="?android:selectableItemBackground"
                    android:contentDescription="@string/desc_frequency_increment_btn"
                    android:src="@drawable/btn_increment"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tone_creator_fundamental_frequency_input" />

                <SeekBar
                    android:id="@+id/tone_creator_master_volume_bar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="32dp"
                    android:progress="100"
                    android:progressTint="@color/app_yellow_gradient_start"
                    android:thumb="@drawable/custom_seekbar_thumb"
                    app:layout_constraintEnd_toEndOf="@id/tone_creator_fundamental_frequency_bar"
                    app:layout_constraintStart_toStartOf="@id/tone_creator_fundamental_frequency_input"
                    app:layout_constraintTop_toBottomOf="@id/tone_creator_fundamental_frequency_bar" />

                <ImageView
                    android:id="@+id/tone_creator_volume_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@null"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/ic_volume_high"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_master_volume_bar"
                    app:layout_constraintEnd_toEndOf="@id/tone_creator_frequency_decrement_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_master_volume_bar" />

                <TextView
                    android:id="@+id/tone_creator_volume_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="marquee"
                    android:labelFor="@id/tone_creator_fundamental_frequency_input"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/tone_volume_header"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_master_volume_bar"
                    app:layout_constraintEnd_toStartOf="@id/tone_creator_master_volume_bar"
                    app:layout_constraintStart_toEndOf="@id/tone_creator_volume_icon"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_master_volume_bar" />

                <TextView
                    android:id="@+id/tone_creator_master_volume_input"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="4dp"
                    android:ems="2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_master_volume_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tone_creator_master_volume_bar"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_master_volume_bar"
                    tools:text="100" />

                <CheckBox
                    android:id="@+id/tone_creator_overtones_activator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="8dp"
                    android:buttonTint="@color/app_yellow"
                    android:paddingStart="19dp"
                    android:text="@string/overtones_header"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/tone_creator_overtones_preset"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tone_creator_master_volume_bar"
                    tools:ignore="RtlSymmetry" />

                <Spinner
                    android:id="@+id/tone_creator_overtones_preset"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:elevation="1dp"
                    app:layout_constraintBottom_toBottomOf="@id/tone_creator_overtones_activator"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tone_creator_overtones_activator" />

                <LinearLayout
                    android:id="@+id/tone_creator_overtones_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tone_creator_overtones_activator"
                    tools:visibility="gone">

                    <include
                        android:id="@+id/tone_creator_overtone_0"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_1"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_2"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_3"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_4"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_5"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_6"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_7"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_8"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_9"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_10"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_11"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_12"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_13"
                        layout="@layout/overtone_creator" />

                    <include
                        android:id="@+id/tone_creator_overtone_14"
                        layout="@layout/overtone_creator" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tone_creator_guideline_details_control_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tone_creator_guideline_details_control_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tone_creator_guideline_creator_bottom">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/tone_creator_guideline_parameters_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.52" />

        <TextView
            android:id="@+id/tone_creator_tone_details_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/tone_details_header"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tone_creator_tone_details_header_underline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:background="@color/header_separator"
            app:layout_constraintTop_toBottomOf="@id/tone_creator_tone_details_header" />

        <TextView
            android:id="@+id/tone_creator_tone_details_sample_rate_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:ellipsize="marquee"
            android:gravity="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/sample_rate_header"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@id/tone_creator_tone_details_fundamental_frequency_header"
            app:layout_constraintEnd_toStartOf="@id/tone_creator_guideline_parameters_separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tone_creator_tone_details_header_underline" />

        <TextView
            android:id="@+id/tone_creator_tone_details_sample_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="marquee"
            android:gravity="start"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tone_creator_guideline_parameters_separator"
            app:layout_constraintTop_toTopOf="@id/tone_creator_tone_details_sample_rate_header"
            tools:text="44.1kHz" />

        <TextView
            android:id="@+id/tone_creator_tone_details_fundamental_frequency_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/frequency_header"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@id/tone_creator_tone_details_envelope_preset_header"
            app:layout_constraintEnd_toEndOf="@id/tone_creator_tone_details_sample_rate_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tone_creator_tone_details_sample_rate_header" />

        <TextView
            android:id="@+id/tone_creator_tone_details_fundamental_frequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="start"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/white"
