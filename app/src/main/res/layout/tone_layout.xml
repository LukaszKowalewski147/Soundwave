<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/black">

    <ImageView
        android:id="@+id/frequency_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_frequency"
        app:layout_constraintBottom_toBottomOf="@+id/frequency_header"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/frequency_decrement_btn"
        app:layout_constraintStart_toStartOf="@+id/frequency_decrement_btn"
        app:layout_constraintTop_toTopOf="@+id/frequency_header"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/frequency_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/frequency_header"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/frequency_txt"
        app:layout_constraintStart_toEndOf="@+id/frequency_icon"
        app:layout_constraintTop_toTopOf="@+id/frequency_txt" />

    <EditText
        android:id="@+id/frequency_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:text="500"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText,LabelFor" />

    <TextView
        android:id="@+id/frequency_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="Hz"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/frequency_txt"
        app:layout_constraintStart_toEndOf="@+id/frequency_txt"
        app:layout_constraintTop_toTopOf="@+id/frequency_txt"
        tools:ignore="HardcodedText" />

    <SeekBar
        android:id="@+id/frequency_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:progress="50"
        android:progressTint="@color/button_standard_start"
        android:thumb="@drawable/seek_bar_thumb_custom"
        app:layout_constraintBottom_toBottomOf="@+id/frequency_decrement_btn"
        app:layout_constraintEnd_toStartOf="@id/frequency_increment_btn"
        app:layout_constraintStart_toEndOf="@id/frequency_decrement_btn"
        app:layout_constraintTop_toTopOf="@+id/frequency_decrement_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/frequency_decrement_btn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/standard_button"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frequency_txt"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/frequency_increment_btn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/standard_button"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frequency_txt"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/volume_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_volume_24"
        app:layout_constraintEnd_toStartOf="@+id/frequency_bar"
        app:layout_constraintStart_toStartOf="@+id/frequency_decrement_btn"
        app:layout_constraintTop_toBottomOf="@+id/frequency_decrement_btn"
        app:tint="@color/white"
        tools:ignore="ContentDescription" />

    <SeekBar
        android:id="@+id/volume_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:progress="100"
        android:progressTint="@color/button_standard_start"
        android:thumb="@drawable/seek_bar_thumb_custom"
        app:layout_constraintBottom_toBottomOf="@+id/volume_icon"
        app:layout_constraintEnd_toEndOf="@id/frequency_bar"
        app:layout_constraintStart_toStartOf="@+id/frequency_bar"
        app:layout_constraintTop_toTopOf="@id/volume_icon" />

    <TextView
        android:id="@+id/volume"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="2"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/volume_bar"
        app:layout_constraintEnd_toEndOf="@+id/frequency_increment_btn"
        app:layout_constraintStart_toEndOf="@+id/frequency_bar"
        app:layout_constraintTop_toTopOf="@+id/volume_bar"
        tools:text="100" />

    <CheckBox
        android:id="@+id/overtones_activator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:buttonTint="@color/button_standard_end"
        android:text="Overtones"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/frequency_decrement_btn"
        app:layout_constraintTop_toBottomOf="@+id/volume_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/overtones_activator">

        <include
            android:id="@+id/overtone_1"
            layout="@layout/overtone" />

        <include
            android:id="@+id/overtone_2"
            layout="@layout/overtone" />

        <include
            android:id="@+id/overtone_3"
            layout="@layout/overtone" />

        <include
            android:id="@+id/overtone_4"
            layout="@layout/overtone" />

        <include
            android:id="@+id/overtone_5"
            layout="@layout/overtone" />

        <include
            android:id="@+id/overtone_6"
            layout="@layout/overtone" />

        <include
            android:id="@+id/overtone_7"
            layout="@layout/overtone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>